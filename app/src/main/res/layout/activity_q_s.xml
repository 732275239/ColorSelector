<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#333E4C"
    android:gravity="center"
    tools:context=".QSActivity">
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:textColor="#FFFFFF"
        android:text="当前选择颜色"/>

    <com.example.color.view.Color2
        android:id="@+id/color"
        android:layout_width="300dp"
        android:layout_height="300dp" />

    <SeekBar
        android:id="@+id/red"
        android:layout_margin="20dp"
        android:min="26"
        android:max="255"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:progressDrawable="@drawable/red_seek_bar"
        android:thumb="@drawable/seek_bar_thumb"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <SeekBar
        android:id="@+id/green"
        android:layout_margin="20dp"
        android:min="26"
        android:max="255"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:progressDrawable="@drawable/green_seek_bar"
        android:thumb="@drawable/seek_bar_thumb"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <SeekBar
        android:id="@+id/bule"
        android:layout_margin="20dp"
        android:min="26"
        android:max="255"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:progressDrawable="@drawable/bule_seek_bar"
        android:thumb="@drawable/seek_bar_thumb"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
</LinearLayout>